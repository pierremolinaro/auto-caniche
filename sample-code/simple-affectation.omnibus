
enum $couleur {vert, orange, rouge}

#--------------------------------------------------------*

machine @sequentiel

  var feu $couleur = .vert

  event assignment (?inFeu $couleur) {
    feu = inFeu
  }

  event nop () {
  ensures
    "1" : (feu == old feu)
  }

}

#--------------------------------------------------------*

scenario @sequentiel "nop sequence" :
  nop, nop
;

#--------------------------------------------------------*

scenario @sequentiel "assignment sequence" :
  assignment!orange,
  assignment!rouge
;

#--------------------------------------------------------*
